    "ps = input(\"Enter your password:\")\n",
    "def t_f(ps):\n",
    "    if \" \" in ps:\n",
    "        print(\"Error: Password should not contain spaces.\")\n",
    "        return False\n",
    "    lower = any(ch.islower() for ch in ps)\n",
    "    upper = any(ch.isupper() for ch in ps)\n",
    "    digit = any(ch.isnumeric()for ch in ps)\n",
    "    special = any(not ch.isalnum() for ch in ps)\n",
    "    if lower and upper and digit and special:\n",
    "        return True\n",
    "    else:\n",
    "        return False\n",
    "t_f(ps)\n",
    "        "
