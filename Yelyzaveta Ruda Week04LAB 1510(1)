    "else:\n",
    "    result = (\n",
    "        \"Valid\"\n",
    "        if re.fullmatch(r\"(?=.*[A-Z])(?=.*[a-z])(?=.*\\d)(?=.*[@#$%^&*!]).{9,}\", user_pas)\n",
    "        else \"Invalid\")\n",
